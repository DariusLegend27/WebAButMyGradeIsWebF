<p class="h1">Login</p>
<div class="row">
    <div class="col-md-8">
        <form id="dataForm" asp-antiforgery="true" asp-controller="Home" asp-action="adminPanel">
            <div class="form-group row">
                <label class="col-md-2 col-form-label" for="usernameInput">Username</label>
                <div class="col-md-6">
                    <input type="text" maxlength="100" id="usernameInput" name="usernameInput" class="form-control" placeholder="Username" value="" required />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2 col-form-label" for="passwordInput">Password</label>
                <div class="col-md-6">
                    <input type="password" maxlength="100" id="passwordInput" name="passwordInput" class="form-control" placeholder="Password" value="" required />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-10 offset-2">

                    <input type="submit" class="btn btn-primary" value="Login" id="loginButton" />
                </div>
            </div>
            @if (ViewBag.Message != "")
            {
                <div class="form-group row">
                    <div class="col-md-6 offset-2">
                        <div class="alert-info" id="messageBox">@ViewBag.Message</div>
                    </div>
                </div>
            }
        </form>

    </div>
</div>


@section Scripts  {
    <script>
        $('#dataForm').validate({ // initialize the plugin
            rules: {
                usernameInput: {
                    required: true,
                    email: true
                },
                passwordInput: {
                    required: true
                }
            }
        });
    </script>

}

